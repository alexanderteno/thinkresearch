<%= form_for patient, :html => {:class => "form-horizontal"} do |f| %>
  
  <% if patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :mrn, :class => "col-sm-2 control-label capital" %>
    <div class="col-sm-10">
      <%= f.text_field :mrn, :class => "form-control", :placeholder => "MRN", :required => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :first_name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :first_name, :class => "form-control", :placeholder => "First Name", :required => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :middle_name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :middle_name, :class => "form-control", :placeholder => "Middle Name" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :last_name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :last_name, :class => "form-control", :placeholder => "Last Name", :required => true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :height, :class => "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.number_field :height, :class => "form-control", :placeholder => "Height" %>
    </div>
    <%= f.label :weight, :class => "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.number_field :weight, :class => "form-control", :placeholder => "Weight" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit params[:action] == "new" ? "Submit" : "Update", :class => "btn btn-primary" %>
      <%= link_to 'Cancel', root_url, :class => "btn btn-default", :role => "button" %>
    </div>
  </div>
  
<% end %>
